@model QuizMaster.Models.Subject

@{ ViewData["Title"] = "CreatSubject";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

    <div class="row no-gutters">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="contact-wrap w-100 p-md-5 p-4">
                <h3 class="mb-4">Subject Creation</h3>
                <div class="text-danger">@ViewBag.Message</div>
                <form asp-action="CreatSubject" asp-controller="QuizManager">
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="label" asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Subject Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary">
                                <div class="submitting"></div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
        @*<div class="col-md-5 order-md-first d-flex align-items-stretch">
            <div id="map" class="map"></div>
        </div>*@
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
